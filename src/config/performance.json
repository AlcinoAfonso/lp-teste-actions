{
  "images": {
    "formats": ["avif", "webp"],
    "sizes": {
      "thumbnail": 150,
      "small": 300,
      "medium": 600,
      "large": 1200,
      "xlarge": 1920
    },
    "quality": {
      "avif": 80,
      "webp": 85,
      "default": 90
    }
  },
  "fonts": {
    "preload": ["Inter-Regular", "Inter-Bold"],
    "display": "swap",
    "fallback": ["system-ui", "sans-serif"]
  },
  "cache": {
    "static": 31536000,
    "images": 86400,
    "api": 3600
  },
  "optimization": {
    "minify": true,
    "removeComments": true,
    "treeshake": true,
    "bundleSize": {
      "warning": 250,
      "error": 500
    }
  }
}
